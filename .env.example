# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://user:password@localhost:5432/snapcms"

# ─── Session ─────────────────────────────────────────────────────────────────
NUXT_SESSION_SECRET="change-me-to-a-random-32-char-string"

# ─── SMTP (Nodemailer) ────────────────────────────────────────────────────────
NUXT_SMTP_HOST="smtp.example.com"
NUXT_SMTP_PORT="587"
NUXT_SMTP_USER="user@example.com"
NUXT_SMTP_PASS="smtp-password"
NUXT_SMTP_FROM="SnapCMS <noreply@snapcms.io>"

# ─── Firebase (server-side admin) ────────────────────────────────────────────
# Paste the entire service-account JSON as a single-line string
NUXT_FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"..."}'
NUXT_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"

# ─── Firebase (client-side public config) ────────────────────────────────────
NUXT_PUBLIC_FIREBASE_API_KEY="AIza..."
NUXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NUXT_PUBLIC_FIREBASE_PROJECT_ID="your-project"
NUXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NUXT_PUBLIC_FIREBASE_APP_ID="1:123:web:abc"

# ─── Google Places (client-side) ─────────────────────────────────────────────
NUXT_PUBLIC_GOOGLE_PLACES_API_KEY="AIza..."

# ─── App ─────────────────────────────────────────────────────────────────────
NUXT_PUBLIC_APP_NAME="SnapCMS"
